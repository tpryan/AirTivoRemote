<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009"
		 xmlns:s="library://ns.adobe.com/flex/spark"
		 width="92" height="182" contentBackgroundAlpha="1.0" contentBackgroundColor="#3F3F3F">
	
	<fx:Metadata>
		[Event(name="up", type="flash.events.Event")]
		[Event(name="down", type="flash.events.Event")]
	</fx:Metadata>
	
	<fx:Script>
		<![CDATA[
			protected function channelUp_clickHandler(event:MouseEvent):void{
				dispatchEvent(new Event("up"));
			}
			
			protected function channelDown_clickHandler(event:MouseEvent):void{
				dispatchEvent(new Event("down"));
			}
		]]>
	</fx:Script>
	
	<s:Label top="5" fontSize="20" horizontalCenter="0" text="Channel"/>
	<s:Button id="channelUp" left="5" top="27" width="80" height="73" label="↑"
			  click="channelUp_clickHandler(event)"/>
	<s:Button id="channelDown" left="5" bottom="5" width="80" height="73" label="↓"
			  click="channelDown_clickHandler(event)"/>
</s:Group>
